{
    "manifest_version": 2,
    "name": "BigmaC",
    "version": "1.0",
    "description": "Nobitex Proof of Reserves Chrome Extension",
    "permissions": [
      "tabs"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "content.js",
          "verifier.js"
        ]
      }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self' blob:"
  }
  